<main class="d-flex flex-column h-100">
    <header class="bg-primary bg-gradient p-2">
        <h2 class="fw-bold">Products</h1>
    </header>

    <section class="h-100 d-flex">
        <aside class="d-flex flex-column justify-content-center align-items-center sideNav h-100 me-2 p-2">
            <select class="form-control" id="categorySelect">
                <option value="" selected>All</option>
                <option value="sports">Sports</option>
                <option value="fashion">Fashion</option>
                <option value="food">Food</option>
                <option value="cars">Cars</option>
                <option value="tickets">Tickets</option>
              </select>

            <input id="searchByTitleInput" type="text" class="form-control mt-3" placeholder="Search Title" />

            <input id="searchByMinPriceInput" type="text" class="form-control mt-3" placeholder="Min Price" onkeypress="return /[0-9]/i.test(event.key)" />

            <button id="searchButton" type="button" class="btn btn-primary mt-3 w-100">Search</button>
        </aside>

        <div id="productsContainer" class="d-flex productsList w-100 mt-2 align-items-start"></div>
    </section>
</main>