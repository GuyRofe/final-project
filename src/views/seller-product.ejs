<%- include('./shared/html-head.ejs') %>
<link rel="stylesheet" type="text/css" href="/css/seller-product.css">
</head>

<body>
    <div class="d-flex flex-column h-100">
        <%- include('./shared/seller-nav'); %>

        <main class="d-flex align-items-center justify-content-center h-100">
            <form id="editProductForm" class="d-flex flex-column editProductForm p-3">
                <h1>Edit Product</h1>

                <label class="mt-3" for="productTitleInput">Enter a Title</label>
                <input type="text" class="form-control" id="productTitleInput" />

                <label class="mt-3" for="productDescriptionInput">Enter a Description</label>
                <textarea class="form-control descriptionInput" id="productDescriptionInput"></textarea>

                <div class="form-group mt-3">
                    <label for="productCategorySelect">Select Category</label>
                    <select class="form-control" id="productCategorySelect">
                      <option value="sports">Sports</option>
                      <option value="fashion">Fashion</option>
                      <option value="food">Food</option>
                      <option value="cars">Cars</option>
                      <option value="tickets">Tickets</option>
                    </select>
                </div>

                <label class="mt-3" for="productPriceInput">Enter a Price</label>
                <input type="text" class="form-control" id="productPriceInput" onkeypress="return /[0-9]/i.test(event.key)" />

                <button class="btn btn-primary mt-3" type="submit">Save Changes</button>
                <button id="deleteProductButton" class="btn btn-danger mt-3" type="button">Delete Product</button>

                <span class="d-none mt-3 alert alert-danger" id="formError"></span>
            </form>
        </main>
    </div>
</body>

<%- include('./shared/html-scripts.ejs') %>

    <script src="/js/seller-product.js"></script> 
</html>